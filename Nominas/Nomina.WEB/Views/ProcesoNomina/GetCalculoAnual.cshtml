@using Common.Utils
@model RH.Entidades.NOM_CalculoAnual

<style>
    div.container {
        width: 100%;
    }
    .nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover{
        color: white;
        background-color: #762a34;
    }
</style>

@if (Model != null)
{
