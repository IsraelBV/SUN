                    <tr><th>ISR Antes Subsidio</th><td >@Model.isrAntes.ToCurrencyFormat(2, false)</td><td colspan="5"></td></tr>
                    <tr><th>ISR Pagado</th><td class="text-info">@Model.isrPagado.ToCurrencyFormat(2, false)</td><td colspan="5"></td></tr>
                    <tr><th>ISR a Retener</th><td class="text-danger">@Model.isrRetener.ToCurrencyFormat(2, false)</td><td colspan="5"></td></tr>
                    <tr><th>Saldo Favor</th><td class="text-success">@Model.saldoFavor.ToCurrencyFormat(2, false)</td><td colspan="5"></td></tr>                   
                </tbody>
            </table>
        </div>  
    </div>
</div>

